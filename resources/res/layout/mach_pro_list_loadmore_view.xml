<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.sankuai.sailor.infra.commons.widget.loading.AnimatedArcView
            android:layout_gravity="center"
            android:id="@+id/wm_mach_pro_loadmore_anim"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:firstCircleColor="@color/firstCircleColor"
            app:lineStoke="3dp"
            app:secondCircleColor="@color/secondCircleColor"/>
        <TextView
            android:textColor="@color/common_text_hint"
            android:gravity="center_vertical"
            android:id="@+id/wm_mach_pro_loadmore_txt"
            android:layout_height="wrap_content"
            style="@style/CommonTextStyle"/>
    </LinearLayout>
    <Space
        android:id="@+id/wm_mach_pro_loadmore_bottom_space"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
