<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_custom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="327dp"
        android:layout_height="156dp"
        android:src="@drawable/schematic"
        android:scaleType="centerInside"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enabling Location Service"/>
        <TextView
            android:textSize="20sp"
            android:textColor="@color/color_222222"
            android:gravity="start"
            android:layout_gravity="center"
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Set Location Service to Always and turn on Precise Location"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_gravity="center"
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="it is mainly used to obtain the location of order distribution, food pickup, delivery, order heat map and other functions."
            android:maxLines="5"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/bg_dialog_button_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Shut down"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/bg_dialog_button_sure"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Turn on"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
