<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_select_segment_overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/video_select_top_line"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginLeft="52.5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="52.5dp"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/video_select_bottom_line"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginLeft="52.5dp"
        android:layout_marginRight="52.5dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/video_segment_left"
        android:background="#b3000000"
        android:layout_width="4.5dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/video_segment_clip_left"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/video_segment_right"
        android:background="#b3000000"
        android:layout_width="4.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/video_segment_clip_right"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/video_select_left_margin"
        android:background="#b3000000"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/video_segment_left"/>
    <View
        android:id="@+id/video_select_right_margin"
        android:background="#b3000000"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/video_segment_left"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/ugc_segment_video_cursor"
        android:background="@drawable/video_segment_cursor_background"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/video_segment_left"/>
</RelativeLayout>
