<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_audit_waiting"
    android:background="#272427"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_audit_unregister_bottom"
        android:paddingTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <ImageView
            android:id="@+id/iv_audit_waiting_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_auditing"/>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:id="@+id/tv_audit_waiting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="審核中"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#5c5c5c"
            android:gravity="center"
            android:id="@+id/tv_audit_waiting_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="您的資料未通過審核，原因："/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/ll_audit_waiting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#1a000000"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:gravity="center"
            android:id="@+id/tv_audit_waiting_button"
            android:background="@drawable/button_yellow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="去查看失敗原因"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    </LinearLayout>
</FrameLayout>
