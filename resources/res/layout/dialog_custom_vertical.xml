<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_custom"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color_1A1A1A"
        android:gravity="center"
        android:id="@+id/textView_dialog_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/color_666666"
        android:gravity="center"
        android:id="@+id/textView_dialog_custom_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxHeight="150dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:gravity="center"
            android:id="@+id/button_dialog_custom_ok"
            android:background="@drawable/bg_dialog_button_sure"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:gravity="center"
            android:id="@+id/button_dialog_custom_cancel"
            android:background="@drawable/bg_dialog_button_cancel"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/im_common_dimen_10dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
</LinearLayout>
