<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/rl_preview"
        android:background="@color/black"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/change_camera_view"/>
    <RelativeLayout
        android:id="@+id/change_camera_view"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/toolbar_view">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="6dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_white"
            android:layout_centerVertical="true"
            android:rotationY="@integer/rotation"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/toolbar_view"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_bottom"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/controlsFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp">
            <ImageView
                android:id="@+id/iv_take_picture"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:src="@drawable/capture_photo"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_change_camera"
                android:padding="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/capture_camera"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
