<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/bg_white_with_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="70dp"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/tv_work_status_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ready to Go？"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="#1a3c3d"
                    android:gravity="center"
                    android:id="@+id/tv_work_status"
                    android:background="@drawable/button_green"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:text="Go Online"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_tips_view"
            android:background="@drawable/bg_white_with_corner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/color_999999"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips:\10请耐心等待系统派单\10若长时间不派单，可以打开热力图，去订单密集的地点接单"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/tv_refresh_newtask"
            android:background="@drawable/bg_white_with_corner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/icon_refresh"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/tv_finished_task"
            android:background="@drawable/bg_white_with_corner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="历史订单"/>
        </FrameLayout>
    </LinearLayout>
    <com.sankuai.sailor.homepage.view.LoadingView
        android:id="@+id/loading_view"
        android:background="@color/color_d2d2d2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
