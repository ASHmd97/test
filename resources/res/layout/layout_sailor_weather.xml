<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mask_weather_iv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/layout_sailor_weather_mask"/>
    <include layout="@layout/layout_sailor_weather_strong_wind"/>
    <com.sankuai.sailor.baseadapter.extension.fooddelivery.widget.weather.WeatherView
        android:id="@+id/weather_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
