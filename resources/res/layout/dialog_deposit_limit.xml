<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_dis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1a1a1a"
            android:gravity="center_horizontal"
            android:id="@+id/tv_deposit_limit_title"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deposit Security Fee to Start Delivery"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"/>
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/btn_cancel"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_close"/>
        </FrameLayout>
    </FrameLayout>
    <View
        android:background="#4d000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/ic_deposit_limit1"
            android:layout_marginStart="24dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="65dp">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"
                android:id="@+id/tv_deposit_limit_guarantee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guarantee your delivery"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/tv_deposit_limit_guarantee_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Guarantee better service and better rider management"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp">
        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/ic_deposit_limit2"
            android:layout_marginStart="24dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="65dp">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"
                android:id="@+id/tv_deposit_limit_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe and Refundable"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/tv_deposit_limit_safe_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="The deposit is retained in full in your account and eligible refund requests are allowed."/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1a1a1a"
        android:gravity="center"
        android:id="@+id/btn_goto_deposit"
        android:background="@drawable/bg_dialog_button_sure"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:text="Go to deposit"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
