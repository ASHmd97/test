<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/commonui_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/first_column"
        android:background="@color/commonui_white"
        android:layout_width="98dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="6dp"
        android:divider="@null"/>
    <com.meituan.android.base.ui.widget.PinnedSectionListView
        android:id="@+id/second_column"
        android:background="@color/commonui_white"
        android:layout_width="94dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:divider="@null"
        android:layout_toRightOf="@+id/first_column"/>
    <ListView
        android:id="@+id/third_column"
        android:background="@color/commonui_white"
        android:layout_width="123dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="18dp"
        android:divider="@null"
        android:layout_toRightOf="@+id/second_column"/>
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/commonui_white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/alpha_overlay"
        android:background="@drawable/commonui_overlay"
        android:visibility="gone"
        android:layout_width="65dp"
        android:layout_height="66dp"
        android:singleLine="true"
        android:layout_centerInParent="true"/>
</merge>
