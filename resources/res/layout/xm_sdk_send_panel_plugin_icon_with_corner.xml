<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/xm_sdk_send_panel_ic_size"
    android:layout_height="@dimen/xm_sdk_send_panel_ic_size"
    android:layout_margin="@dimen/xm_sdk_send_panel_icon_view_margin">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/xm_sdk_send_panel_plugin_icon"
        android:layout_width="@dimen/xm_sdk_send_panel_ic_size"
        android:layout_height="@dimen/xm_sdk_send_panel_ic_size"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/plugin_corner_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xm_sdk_send_panel_icon_view_margin"
        android:maxWidth="14dp"
        android:maxHeight="14dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/xm_sdk_send_panel_icon_view_margin"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
