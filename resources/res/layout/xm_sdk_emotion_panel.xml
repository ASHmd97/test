<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/xm_sdk_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/xm_sdk_btn_del_mask"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/xm_sdk_btn_del"
        android:background="@drawable/xm_sdk_bg_emotion_del_btn"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:visibility="gone"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/xm_sdk_ic_del"
        android:layout_alignParentBottom="true"
        android:rotationY="@integer/rotation"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
