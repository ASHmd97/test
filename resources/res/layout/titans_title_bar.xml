<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_title_bar"
    android:background="@color/titans_title_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titans_titlebar_height">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/web_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ZeusTitleBar">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="start"
            android:id="@+id/title_bar_left_view_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <com.sankuai.titans.base.titlebar.ComplexButton
                android:id="@+id/button_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/knb_accessibility_content_back"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                zu:textColor="@color/titlebar_action_hint_text_color"
                zu:textSize="@dimen/titans_text_size_15"/>
            <com.sankuai.titans.base.titlebar.ComplexButton
                android:id="@+id/button_lr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/knb_accessibility_content_close"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                zu:textColor="@color/titlebar_action_hint_text_color"
                zu:textSize="@dimen/titans_text_size_15"/>
        </LinearLayout>
        <FrameLayout
            android:gravity="center"
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:id="@+id/title_bar_right_view_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <com.sankuai.titans.base.titlebar.ComplexButton
                android:id="@+id/button_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                zu:textColor="@color/titlebar_action_hint_text_color"
                zu:textSize="@dimen/titans_text_size_15"/>
            <com.sankuai.titans.base.titlebar.ComplexButton
                android:id="@+id/button_rr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                zu:textColor="@color/titlebar_action_hint_text_color"
                zu:textSize="@dimen/titans_text_size_15"/>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:layout_gravity="bottom"
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layoutDirection="locale"
        android:mirrorForRtl="true"
        style="?android:attr/progressBarStyleHorizontal"/>
</merge>
