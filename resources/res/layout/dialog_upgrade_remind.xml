<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@drawable/upgrade_dialog_default_bg"
    android:paddingBottom="10dp"
    android:layout_width="310dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:background="@drawable/bg_upgrade"
        android:layout_width="match_parent"
        android:layout_height="175dp">
        <Button
            android:id="@+id/btn_close"
            android:background="@drawable/upgrade_close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/upgrade_text_title"
            android:gravity="center"
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:maxWidth="252dp"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:id="@+id/update_version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="252dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout">
        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/upgrade_text_content"
                android:gravity="center"
                android:id="@+id/update_content"
                android:paddingTop="18dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/upgrade_remind_content_max_height"
                android:text="@string/update_remind_content"
                android:lineSpacingExtra="0dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"/>
            <View
                android:layout_gravity="bottom"
                android:id="@+id/update_content_transition"
                android:background="@drawable/upgrade_text_transition"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </FrameLayout>
    </RelativeLayout>
    <Button
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/upgrade_btn_text_ok"
        android:gravity="center"
        android:id="@+id/btn_ok"
        android:background="@drawable/upgrade_dialog_button_sure"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:text="@string/update_remind_btn_upgrade"
        android:layout_below="@+id/center_layout"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
