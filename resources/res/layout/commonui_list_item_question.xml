<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="72dp"
    android:layout_weight="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="21dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/commonui_text_size_h1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/commonui_list_item_tag"
                android:background="@drawable/commonui_list_item_solid_bg"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:text="问答"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/commonui_text_size_h6"
                android:textColor="@color/commonui_title_color"
                android:ellipsize="end"
                android:id="@+id/commonui_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/commonui_text_size_h4"
            android:textColor="@color/commonui_secondary_messages_color"
            android:ellipsize="end"
            android:id="@+id/commonui_list_item_hint"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8.5dp"
            android:maxLines="1"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/commonui_list_item_rightarrow"
        android:background="@drawable/commonui_list_item_ic_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>
</LinearLayout>
