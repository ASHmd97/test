<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/tv_address_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/tv_address_guide_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/TextViewStyle"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <com.sankuai.sailor.infra.commons.widget.corner.RoundedCornerImageView
            android:id="@+id/iv_address_1"
            android:visibility="gone"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:scaleType="centerCrop"
            app:cornerRadius="10dp"/>
        <com.sankuai.sailor.infra.commons.widget.corner.RoundedCornerImageView
            android:id="@+id/iv_address_2"
            android:visibility="gone"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            app:cornerRadius="10dp"/>
        <com.sankuai.sailor.infra.commons.widget.corner.RoundedCornerImageView
            android:id="@+id/iv_address_3"
            android:visibility="gone"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            app:cornerRadius="10dp"/>
    </LinearLayout>
</LinearLayout>
