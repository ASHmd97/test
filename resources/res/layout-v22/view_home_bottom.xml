<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/homeBottomView"
    android:background="@drawable/bg_top_radius_16_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_operation_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/flDragHandle"
            android:paddingTop="10dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center_horizontal"
                android:id="@+id/view_drag_handle"
                android:background="@drawable/bg_radius_2_eeeeee"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="4dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_online_button"
            android:background="@drawable/bg_radius_26_ffea00"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_go_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Go Online"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_delivery_order"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24.38dp"
                    android:layout_height="22.5dp"
                    android:src="@drawable/ic_delivery_order"
                    android:rotationY="@integer/rotation"/>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1a1a1a"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/tv_delivery_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.63dp"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_find_order"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/tv_find_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#666666"
                android:id="@+id/tv_find_order_desc"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_priority_dispatch"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#1a1a1a"
                    android:id="@+id/tv_priority_dispatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority dispatch activated"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_order_probability"
                android:background="@drawable/bg_radius_grey"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_star"
                    android:scaleType="centerInside"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#1a1a1a"
                    android:ellipsize="end"
                    android:id="@+id/tv_probability_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Increase order acceptance probability"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_bundle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
