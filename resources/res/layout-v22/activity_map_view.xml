<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sankuai.sailor.homepage.view.mapview.CourierMapView
                android:id="@+id/courier_map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:background="@drawable/bg_map_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
                <RelativeLayout
                    android:gravity="center"
                    android:paddingLeft="7.5dp"
                    android:paddingRight="7.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:paddingHorizontal="7.5dp">
                    <ImageView
                        android:id="@+id/rl_sidebar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/icon_sidebar"
                        android:scaleType="centerInside"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <View
                        android:id="@+id/message_unread"
                        android:background="@drawable/ic_red_circle"
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="42dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_inspection_list"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/icon_inspection_list"
                                android:scaleType="centerInside"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="-1dp"/>
                            <View
                                android:id="@+id/view_unFinished_inspection"
                                android:background="@drawable/ic_red_circle"
                                android:visibility="gone"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="42dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/rl_billboard"
                                android:visibility="gone"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/icon_billboard"
                                android:scaleType="centerInside"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:id="@+id/img_tag_new"
                                android:visibility="gone"
                                android:layout_width="29dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/icon_new"
                                android:layout_marginStart="-32dp"
                                android:layout_toEndOf="@+id/rl_billboard"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_im"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/icon_im"
                                android:scaleType="centerInside"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="-1dp"/>
                            <View
                                android:id="@+id/view_im_unread"
                                android:background="@drawable/ic_red_circle"
                                android:visibility="gone"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="42dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <com.sankuai.sailor.homepage.view.HomeBottomView
                    android:id="@+id/homeBottomView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_loading_view"
                    android:visibility="gone"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="64dp"
                    android:scaleType="centerInside"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_fileName="loading.json"/>
            </RelativeLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_virtual_waybill"
                android:visibility="gone"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="37.5dp"
                android:src="@drawable/ic_virtual_waybill"/>
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/color_000000"
                android:gravity="center"
                android:layout_gravity="start"
                android:id="@+id/iv_virtual_mock_icon"
                android:background="@drawable/bg_radius_8_00f052"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:maxLines="1"
                android:layout_marginStart="-8dp"/>
        </FrameLayout>
        <include layout="@layout/view_main_welcome"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/yellow_tip"
            android:background="#ccffea00"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="start"
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent">
        <fragment
            android:name="com.sankuai.sailor.homepage.view.fragment.DrawFragment"
            android:layout_gravity="start"
            android:id="@+id/new_drawer_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>
