<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/passport_text_black"
        android:id="@+id/tv_bind_mobile_phone_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/passport_email_login_welcome_title"
        android:layout_marginStart="2dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/passport_text_gray"
        android:id="@+id/tv_bind_mobile_phone_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Log in with tuantuan@meituan.com."
        android:layout_marginStart="2dp"/>
    <com.meituan.passport.oversea.view.PassportMobilePhoneInput
        android:id="@+id/pmpi_mobile_phone_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"/>
    <com.meituan.passport.oversea.view.PassportInputCheckView
        android:id="@+id/picv_mobile_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <com.meituan.passport.oversea.view.PassportConfirmButton
        android:id="@+id/bt_bind_mobile_phone_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="26dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/passport_text_black"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
