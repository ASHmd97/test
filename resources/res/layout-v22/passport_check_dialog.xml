<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/passport_check_dialog_bg"
    android:paddingBottom="16dp"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/passport_check_dialog_text"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="22dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/passport_check_dialog_text"
        android:gravity="center"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="22dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/tv_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/passport_check_dialog_button_text"
            android:gravity="center"
            android:id="@+id/tv_left"
            android:background="@drawable/passport_check_dialog_transparent_bg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/passport_check_dialog_button_text"
            android:gravity="center"
            android:id="@+id/tv_right"
            android:background="@drawable/passport_check_dialog_yellow_gradient_bg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</RelativeLayout>
